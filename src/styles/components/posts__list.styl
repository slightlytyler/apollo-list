  margin-top: em

  .day
    & > .header
      margin-bottom: .5em
      font-size: 1.5em
      font-weight: 600

  .list
    list-style: none
    padding: 0
    margin: 0

    & > .item
      display: flex
      margin-bottom: 1em

      .actions
        display: flex
        align-item: center
        margin-right: 1em

        & > .item
          width: 1.5em
          color: $dark-gray-a

          &:not(:last-child)
            margin-right: .5em

      .title
        color: $blue-a