.auth
  .header
    margin-bottom: 3em
    color: white

    .primary
      font-size: 2.75em

    .secondary
      font-size: 1.5em

  .loading-state
    .panel
      display: flex
      justify-content: center
      align-items: center
      height: 25em

    .spinner
      font-size: 5em

  .button
    margin-top: 2em

  .alternate
    margin-top: 2em
    color: white
    text-decoration: none
    cursor: pointer

    &:hover
      text-decoration: underline